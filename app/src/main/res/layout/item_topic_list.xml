<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_parent"
    style="@style/RippleStyleBlack"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:paddingLeft="@dimen/spacing_middle"
    android:paddingTop="@dimen/spacing_medium"
    android:paddingRight="@dimen/spacing_middle"
    android:paddingBottom="@dimen/spacing_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/lyt_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_gradient_bg"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0dp" />


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/lyt_icon"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxWidth="120dp"
                android:singleLine="true"
                android:text="Main Title hello jelllo hello hello ehlloe "
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/colorTextAction"
                app:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/follow_me"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@drawable/border_bg"
                android:clickable="true"
                android:ellipsize="end"
                android:maxWidth="120dp"
                android:padding="12dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="#00A273"
                android:textSize="12dp"
                app:fontFamily="sans-serif-medium" />

        </RelativeLayout>

    </LinearLayout>

</com.balysv.materialripple.MaterialRippleLayout>