<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">


    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lyt_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/spacing_xmiddle"
            android:src="@drawable/digital_reader_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/title_activity_register"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textColor="@color/colorTextAction"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/lyt_avatar"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/spacing_xmiddle"
            android:layout_marginBottom="@dimen/spacing_xmiddle"
            android:src="@drawable/ic_user"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_fname"
            android:layout_width="250dp"
            android:layout_height="@dimen/spacing_xmlarge"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text_round"
            android:hint="Enter First Name"
            android:inputType="text"
            android:maxLength="50"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textColorHint="@color/grey_60" />

        <EditText
            android:id="@+id/et_lname"
            android:layout_width="250dp"
            android:layout_height="@dimen/spacing_xmlarge"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text_round"
            android:hint="Enter Last Name"
            android:inputType="text"
            android:maxLength="50"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textColorHint="@color/grey_60" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="250dp"
            android:layout_height="@dimen/spacing_xmlarge"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text_round"
            android:hint="Enter email"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textColorHint="@color/grey_60" />

        <EditText
            android:id="@+id/etpassword"
            android:layout_width="250dp"
            android:layout_height="@dimen/spacing_xmlarge"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text_round"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:maxLength="50"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textColorHint="@color/grey_60" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large">

            <Button
                android:id="@+id/btn_reg"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_dark"
                android:src="@drawable/ic_next"
                android:text="Register"
                android:textColor="@color/colorBackground"
                app:backgroundTint="@color/colorButton" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already Registered?"

                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="@color/grey_60" />

            <TextView
                android:id="@+id/tvlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="@dimen/spacing_medium"
                android:text="Login here"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorTextAction"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
